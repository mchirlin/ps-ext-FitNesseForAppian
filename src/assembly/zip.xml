<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>${project.version}</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory/>
      <excludes>
      	<exclude>metadata.json</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>./lib/appian</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*:*</include>
      </includes>
      <excludes>
		<!-- FitNesse Dependencies  (using Standalone) -->
        <exclude>org.htmlparser:*</exclude>
        <exclude>org.apache.velocity:velocity</exclude>
        <exclude>commons-lang:commons-lang</exclude>
        <exclude>commons-collections:commons-collections</exclude>
        <exclude>org.json:json</exclude>
        <exclude>com.googlecode.java-diff-utils:diffutils</exclude>
      </excludes>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>